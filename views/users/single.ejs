<div class="container">
	<div class="my-3">
		<h1 class="font-weight-bold text-center"><%= user.name %></h1>
	</div>
	<div class="row">
		<div class="col-md-4 offset-md-4">
			<div class="mb-3">
				<h4 class="font-weight-bold text-center">Watchlist</h4>
				<ul class="list-group">
					<% if(typeof user.watchlist != 'undefined') { for (let movie
					of user.watchlist) { %>
					<li class="list-group-item">
						<a href="/movies/<%= movie._id %>"
							><%= movie.title %></a
						>
					</li>
					<% } } %>
				</ul>
			</div>
		</div>
	</div>
</div>
