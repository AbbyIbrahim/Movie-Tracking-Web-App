<div class="container">
	<div class="mt-3 mb-5 text-center">
		<h1 class="font-weight-bold"><%= pUser.name %></h1>
		<% if (!isOwnProfile) { %>
		<div>
			<% if (isFollowing) { %>
			<a
				href="/users/<%= pUser._id %>/follow-toggle"
				class="btn btn-danger"
			>
				<i class="bi bi-person-x"></i> Unfollow
			</a>
			<% }else{ %>
			<a
				href="/users/<%= pUser._id %>/follow-toggle"
				class="btn btn-primary"
			>
				<i class="bi bi-person-plus"></i> Follow
			</a>
			<% } %>
		</div>
		<% } %>
	</div>
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="mb-3">
				<h4 class="font-weight-bold">Watchlist</h4>
				<ul class="list-group">
					<% if(pUser.watchlist.length) { for (let movie of
					pUser.watchlist) { %>
					<li class="list-group-item">
						<a href="/movies/<%= movie._id %>"
							><%= movie.title %></a
						>
					</li>
					<% } } else { %>
					<p class="text-center">No data available.</p>
					<% } %>
				</ul>
			</div>
			<div class="mb-3">
				<h4 class="font-weight-bold">Persons following</h4>
				<ul class="list-group">
					<% if(pUser.followingPersons.length) { for (let person of
					pUser.followingPersons) { %>
					<li class="list-group-item">
						<a href="/persons/<%= person._id %>"
							><%= person.name %></a
						>
					</li>
					<% } } else { %>
					<p class="text-center">No data available.</p>
					<% } %>
				</ul>
			</div>
			<% if (isOwnProfile) { %>
			<div class="mb-3">
				<h4 class="font-weight-bold">Users following</h4>
				<ul class="list-group">
					<% if(pUser.followingUsers.length) { for (let user of
					pUser.followingUsers) { %>
					<li class="list-group-item">
						<a href="/users/<%= user._id %>/profile"
							><%= user.name %></a
						>
					</li>
					<% } } else { %>
					<p class="text-center">No data available.</p>
					<% } %>
				</ul>
			</div>
			<% } %>
			<div class="mb-3">
				<h4 class="font-weight-bold">Reviews</h4>
				<ul class="list-group">
					<% if(reviews.length) { for (let review of reviews) { %>
					<div class="card mb-1">
						<div class="card-body">
							<h5 class="card-title"><%= review.content %></h5>
							<p class="card-text">
								<%= review.rating %>
								<i class="bi bi-star"></i>
								<i class="bi bi-dash"></i>
								<a href="/movies/<%= review.movie._id %>">
									<%= review.movie.title %>
								</a>
							</p>
						</div>
					</div>
					<% } } else { %>
					<p class="text-center">No data available.</p>
					<% } %>
				</ul>
			</div>
		</div>
	</div>
</div>
